{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specslides.ai/schemas/prompt-extract-v1.json",
  "title": "Prompt Extract",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "source", "session", "prompts"],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "source": { "type": "string", "enum": ["codex"] },
    "session": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "createdAt", "workspaceRoot", "sourcePath"],
      "properties": {
        "id": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "workspaceRoot": { "type": "string" },
        "sourcePath": { "type": "string" }
      }
    },
    "prompts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/prompt" }
    }
  },
  "$defs": {
    "prompt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "text"],
      "properties": {
        "id": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "text": { "type": "string" }
      }
    }
  }
}
